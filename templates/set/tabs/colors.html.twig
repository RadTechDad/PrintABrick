{% import 'macros/blocks.html.twig' as blocks %}
{% import 'macros/elements.html.twig' as elements %}

{% block content %}
    <div class="ui segment clearing basic vertical">
        <form action="{{ path('set_zip', {id: set.id }) }}" method="post">
            <input type="hidden" name="token" value="{{ csrf_token('download-set') }}" />
            <input type="hidden" name="sorted" value="1" />
            <button class="ui primary right floated button" type="submit" ><i class="download icon"></i> {{ 'set.download.multicolor.button' | trans}}</button>
        </form>
    </div>

    {% if colors|length > 0 %}
        <div class="ui segment vertical basic">
            <h2 class="ui dividing header">{{ 'set.inventory.models' | trans }}</h2>
            {% for color in colors %}
                <div class="ui segment vertical basic side color-{{ color['color'].id }}">
                    <h5 class="ui header">
                        {{ color['color'].name }} - #{{ color['color'].rgb }} ({{ color['quantity'] }})
                    </h5>
                    <div class="ui grid doubling ten column row parts">
                        {% for model in color['models'] %}
                            {{ blocks.brick(model['model'],model['quantity'], color['color'].id) }}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
